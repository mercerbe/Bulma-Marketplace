<div class="ui inverted raised very padded text container segment">
  <h2>Hello, {{user}}</h2>
  <hr>

  <h5>Recent Posts</h5>
  {{#each posts}}
    <fieldset>
      <div class="d-sm-flex flex-row justify-content-between posts">
        <div class="post-info">
          <span class="username">{{User.dataValues.username}}: </span>
          <span>{{post}}</span>
          <p class="date">{{posted}}</p>
        </div>
        <div class="buttons">
          {{#if isCurrentUser}}
            <div class=" d-flex flex-column">
              <a class="edit-delete btn btn-outline-info btn-sm" href="/taulkback/{{id}}/edit">Edit</a>
              <a class="edit-delete btn btn-info btn-sm" href="/taulkback/{{id}}/delete">Delete</a>
            </div>
          {{else}}
            <a class="btn btn-outline-primary btn-sm" href="/taulkback/{{id}}/like">Like</a>
          {{/if}}
        </div>
      </div>
      <a href="/taulkback/{{id}}/likes"><span class="likes-link">Likes: {{Likes.length}}</span></a>
    </fieldset>
  {{/each}}
</div>
