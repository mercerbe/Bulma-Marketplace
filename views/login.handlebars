<div class="main_wrapper" style="height:100%;">

<!-- menu -->
<div class="ui inverted segment">
  <div class="ui fixed inverted menu">
    <span href="#" class="header item">
      <i class="comments outline icon"></i>
      Taulkback
    </span>
    <a class="item" href="/">Back</a>
    <a class="item" href="/signup">Sign Up</a>
  </div>
  <br>
  <h2 class="ui center aligned icon header">
    <i class="user icon"></i>
  </h2>
</div>

<div class="ui center aligned inverted raised very padded text container segment">
  <div class="ui inverted form">
    <form action="/login" method="post">
      <h1>Log in</h1>
      <fieldset>
        <label for="username">Username</label>
        <input required autocomplete="off" type="text" name="username" placeholder="username">
        <label for="password">Password</label>
        <input required autocomplete="off" type="password" name="password" placeholder="password">
        <div class="form__submit-button">
          <br>
          <input class="ui inverted primary button" type="submit">
        </div>
      </fieldset>
    </form>
    <br>
    <a href="/"><button class="ui inverted teal button">Back</button></a>
  </div>
</div>

</div>

